<!-- 후기 쓰기 -->
<div id="write_1" class="modal modal-fixed-footer"  style="max-height:100%; width:750px;">
  <br>
  <form action="/epilogue/<%=@one_user.id%>" method="POST" enctype="multipart/form-data" style="height:initial;">
    <input type="hidden" name="authenticity_token", value = "<%=form_authenticity_token %>">
    <input name ="utf8" type="hidden", value="✓">
    <input name="kind" type="hidden" value="epilogue">
    <img id="image_write_in" class="image" src="<%=image_path("whiteline.png")%>" alt="your image" style="max-height:400px; display:block; margin-left:auto;margin-right:auto;"/>

    <div class="field" style="padding-left:20px;,padding-right:20px;">
      <label class="filebox"for="goods_content">
        <img src="<%=image_path("profile.jpg")%>" alt="profile" style="width:40px;height:40px float:left;" >
        <span style="font-size:20px; color:black;"><%= current_user.nickname %>   </span>
        <label for="write_in">사진 업로드</label>
        <input id="write_in" class="image_in" type="file" name="pic">
        별점 :
        <span class="star-rating small_star">
          <input type="radio" name="rating" id="star1" value="1" required><i></i><label for="star1" ></label>
          <input type="radio" name="rating" id="star2" value="2"><i></i><label for="star2"></label>
          <input type="radio" name="rating" id="star3" value="3"><i></i><label for="star3"></label>
          <input type="radio" name="rating" id="star4" value="4"><i></i><label for="star4"></label>
          <input type="radio" name="rating" id="star5" value="5"><i></i><label for="star5"></label>
        </span>
      </label>
      <textarea id="goods_content" class="materialize-textarea" name="content" placeholder="내용을 입력하세요" style="width:90%; margin-left:10px;" required></textarea>
    </div>
    <div class="modal-footer">
      <a href="#" class="modal-action modal-close waves-effect waves-green btn-flat ">
        <i class="material-icons" style="font-size:2rem">settings_backup_restore</i></a>
     <button class="modal-action modal-close waves-effect waves-green btn-flat" type="submit" name="action">
       <i class="material-icons" style="font-size:2rem">textsms</i></button>
    </div>
  </form>
</div>

<!-- ************************************************************************************************* -->

<% @posts.each do |e| %>
  <% if e.kind == "epilogue" && e.other_user == @one_user.id %>
<!------------------------------------------------------------------------------------------------------------->
    <div id="ep_<%=e.id%>" class="modal modal-fixed-footer"  style="max-height:100%; height:800px; max-width:750px;">
      <div style="padding-left:20px; padding-right:20px; padding-top:20px;">
        <% unless e.image_url.nil? %>
          <img src="<%= e.image_url %>" alt="your image" style="max-height:400px; display:block; margin-left:auto;margin-right:auto;"/>
        <% end %>
        <span class="star-rating" >
          <% 1.upto(5) do |i| %>
            <% if i == e.rating.to_i %>
              <i class="on"></i>
            <% else %>
              <i></i>
            <% end %>
          <% end %>
        </span>
        <p style="width:100%;">
         <%= user_profile(current_user.id) %>
         <span style="font-size:20px; color:black;"><%= current_user.nickname %></span>
          <br><%= e.content %>
        <p>
        <% if e.index_check %>
          좋아요 갯수 : <span id="like_count_<%=e.id%>"><%= e.post_likes.all.count %></span>
          <!-- 좋아요 -->
          <% if user_signed_in? && e.post_likes.where(post_id: e.id, user_id: current_user.id).blank? %>
            <button class="like_submit" value="<%= e.id %>">좋아요</button>
          <% elsif user_signed_in? %>
            <button class="like_submit" value="<%= e.id %>">좋아요 취소</button>
          <% end %>
        <!-- 댓글 쓰기 -->
          <div class="re_view" value="<%=e.id%>">댓글 보기 (<%= e.post_replies.all.count %>)</div>
          <div id="reply_<%= e.id%>" style="display:none;">
            <% if user_signed_in?%>
              <form action="/post_reply" method="POST">
                <input name ="utf8" type="hidden", value="✓">
                <input type="hidden" name="authenticity_token", value = "<%=form_authenticity_token %>">
                <input type="hidden" name="post_id" value="<%= e.id %>">
                <span>댓글 : </span><input id="re_input_<%=e.id%>" type="text" name ="content" style="width:80%;" required>
                <button class="re_submit enjoy-css" value="<%=e.id%>" style="height:20px;"><i class="material-icons right small">textsms</i></button>
              </form>
            <% end %>

            <!-- one_댓글 -->
            <% e.post_replies.reverse.each do |r| %>
              <div id="one_reply_<%=r.id%>">
                <span ><%= user_nickname_page(r.user.id) %> : <span id="re_content_<%=r.id%>"><%= r.content %></span> </span>
               <!-- 댓글 수정,삭제 버튼 -->
                <% if user_signed_in? && (r.user == current_user || current_user.kind == "M") %>
                 <button class="reply_update enjoy-css" id="reply_update_<%=r.id%>" value="<%= r.id%>" style="height: 20px;">
                   <i class="small material-icons">mode_edit</i>
                 </button>
                 <button class="reply_delete enjoy-css" id="reply_delete_<%=r.id%>" value="<%= r.id%>" style="height: 20px;">
                   <i class="small material-icons">delete</i>
                 </button>
                 <br>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer" style="width:100%;">
        <a href="#" class="modal-action modal-close waves-effect waves-green btn-flat">
          <i class="material-icons" style="font-size:2rem">settings_backup_restore</i></a>
      </div>
    </div>
<!------------------------------------------------------------------------------------------------------------->

  <!-- 수정 팝업창 -->
    <div id="update<%= e.id%>" class="modal modal-fixed-footer">
      <form action="/epilogue_update/<%= e.id %>" method="POST" enctype="multipart/form-data">
        <input name ="utf8" type="hidden", value="✓">
        <input type="hidden" name="authenticity_token", value = "<%=form_authenticity_token %>">
        <div class="modal-content">
          <img class="goodsImg_up" src="<%=e.image_url%>" alt="your image" style="max-height:400px; display:block; margin-left:auto;margin-right:auto;"/>
          <span class="star-rating " >
            <% 1.upto(5) do |i| %>
              <% if i == e.rating.to_i %>
                <input type="radio" name="rating" id="star<%=i%>_<%=e.id%>" value="<%=i%>" checked><i></i><label for="star<%=i%>_<%=e.id%>"></label>
              <% else %>
                <input type="radio" name="rating" id="star<%=i%>_<%=e.id%>" value="<%=i%>"><i></i><label for="star<%=i%>_<%=e.id%>"></label>
              <% end %>
            <% end %>
          </span>
          <div class="field">
            <label class="filebox" for="update_<%=e.id%>">
              <img src="<%=image_path("profile.jpg")%>" alt="profile" style="width:40px;height:40px float:left;" >
              <span style="font-size:20px; color:black;"><%= e.user.nickname %>   </span>
              <label for="goodsIn_up_<%=e.id%>">사진 업로드</label>
              <input id="goodsIn_up_<%=e.id%>" class="goodsIn_up" type="file" name="image_url">
            </label>
            <textarea id="update_<%=e.id%>" class="materialize-textarea" name="content" required><%= e.content %></textarea>
          </div>
        </div>
        <div class="modal-footer">
           <a href="#" class="modal-action modal-close waves-effect waves-green btn-flat ">
             <i class="large material-icons">settings_backup_restore</i></a>
          <button class="modal-action modal-close waves-effect waves-green btn-flat" type="submit" name="action">
            <i class="large material-icons">done</i></button>
        </div>
      </form>
    </div>
  <% end %>
<% end %>
