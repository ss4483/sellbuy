<div class="row left_ep"  style="margin-bottom:0; width:210px; height:80px;">
  <a class="modal-trigger_ep left row col s12" href="#ep_<%=post.id%>" style="margin-bottom:0; height: 55px;padding:0px; display: inline-block;">
    <div class="col s5 valign-demo valign-wrapper" style=" padding:5px;">
      <% unless post.image_url.nil? %>
        <img class="valign center flea_img_s" src="<%= post.image_url %>" alt="your image"  style="display: block; margin-left: auto; margin-right: auto; max-height:100%; width:auto; max-width:100%; height:auto; vertical-align: middle"/>
      <% end %>
    </div>
    <div class="col s7" style="height: 55px; line-height: 30px; padding-top: 7px;">
      <span class="left_ep" style="font-size:10px; color:black;"><%= user_nickname_ep(post.user.id) %> </span><br>
      <span class="star-rating small_star left" style="width:75px; height:15px;">
        <% 1.upto(5) do |i| %>
          <% if i == post.rating.to_i %>
            <i class="on"></i>
          <% else %>
            <i></i>
          <% end %>
        <% end %>
      </span>
    </div>
  </a>
</div>
<% if user_signed_in? && post.user == current_user  %>
  <div class="row" style="padding:0px; margin-bottom:0px;">
    <div class="col l3  offset-l6">
      <a class="modal-trigger enjoy-css right" href="#update<%= post.id%>" style="position:relative; padding:0px; width:100%; height:40px;">
        [수정]</a>
    </div>
    <div class="col l3">
        <a class="enjoy-css right modal-trigger" href="#post_delete_modal_<%= post.id %>" style="position:relative; padding:0px; width:100%; height:40px;">
          [삭제]</a>
    </div>
  </div>
<% end %>
